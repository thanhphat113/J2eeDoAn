<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>ProductsController</servlet-name>
        <servlet-class>Controller.ProductsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>Controller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailProduct</servlet-name>
        <servlet-class>Controller.DetailProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QLPD</servlet-name>
        <servlet-class>Controller.QLPD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CT_Sua</servlet-name>
        <servlet-class>Controller.CT_Sua</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QLAC</servlet-name>
        <servlet-class>Controller.QLAC</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QLAC</servlet-name>
        <url-pattern>/qlac</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>Controller.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteAccountServerlet</servlet-name>
        <servlet-class>Controller.DeleteAccountServerlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccountServerlet</servlet-name>
        <url-pattern>/deleteAc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>Controller.UpdateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <url-pattern>/UpdateAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductsController</servlet-name>
        <url-pattern>/San-pham</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/trang-chu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailProduct</servlet-name>
        <url-pattern>/Chi-tiet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QLPD</servlet-name>
        <url-pattern>/Danh-sach-san-pham</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CT_Sua</servlet-name>
        <url-pattern>/Sua-chi-tiet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>San-pham</welcome-file>
        <welcome-file>trang-chu</welcome-file>
        <welcome-file>OrderManagerServlet</welcome-file>
    </welcome-file-list>
</web-app>
